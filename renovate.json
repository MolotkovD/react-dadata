{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "pnpm": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["pnpm"],
      "rangeStrategy": "bump",
      "updateTypes": ["minor", "patch"],
      "automergeType": "branch",
      "commitMessagePrefix": "chore(deps):"
    },
    {
      "matchManagers": ["pnpm"],
      "rangeStrategy": "widen",
      "updateTypes": ["major"],
      "commitMessagePrefix": "feat(deps):"
    }
  ],
  "labels": ["dependencies"],
  "stabilityDays": 3,
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}
